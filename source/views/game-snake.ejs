<%- include('./partials/head.ejs')  %>

<body>

    <%- include("./partials/header.ejs")  %>

    <main id="game-main">
        <div class="container">
            <div id="board"></div>
            <div class="boardInfo">
                <div>
                    Score: <div id="scoreBoard"></div>
                </div>
                <button id="start">Start</button>
            </div>
            <div id="gameOver">Game Over</div>
            
            <form id="scoreForm">
                <input id="name" type="text" placeholder="Nombre" name="name" required>
                <button id="save" type="submit" > Save score </button>
            </form>
        </div>
    </main>
    
    <footer>
        <div class="back">
            <a class="backIcon" href="/snake/level"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
    
        <div class="by">
            <p> made by <a target="_blank" href="https://github.com/ffran-acosta">Franco Acosta</a> </p>
        </div>
    </footer>

    <script src="/scripts/script.js"></script> 
    <script src="/scripts/api/score.api.js"></script> 
</body>
</html>